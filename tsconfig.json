{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_module/@types"
    ]
  },
  "exclude": [ "node_module" ],
  "include": ["./"]

}
